        <div class="col"><%= f.submit "検索", class: "btn btn-outline-light " %> </div>
      </div>
    <% end %>

      <div class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
         <% if customer_signed_in? %>
          <li class="nav-item active">
           <span class="nav-link text-dark">ようこそ、<%= current_customer.last_name%>さん</span>
          </li>
          <li class="nav-item">
            <%= link_to icon('fas','fas fa-user',"マイページ"), customers_mypage_path, class: "btn btn-outline-light mx-3 my-1"%>
