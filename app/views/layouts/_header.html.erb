              <li><button class="dropdown-item" type="button">
                <%= link_to "全コース一覧", courses_path %>
              </button></li>
              <li><button class="dropdown-item" type="button">
                <%= link_to "コース設定", new_entry_path %>
              </button></li>
              <li><button class="dropdown-item" type="button">
                <%= link_to "記録", entries_path %>
              </button></li>
            </ul>
          </div>
          <li class="nav-item">
