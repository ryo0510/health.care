
		<% if params[:category_id] %>
			<h2><i class="fas fa-clipboard-list"></i><%= @category.name %>のコース一覧 </h2>
		<% else %>
			<h2><i class="fas fa-clipboard-list"></i>コース一覧 </h2>
		<% end %>
		<h3 class="text-right">
			 <%= link_to new_admin_course_path, class:"btn btn-outline-secondary" do %>
        <i class="fas fa-plus fa-2x"></i>
      <% end %>
		</h3>
		<% if @courses.first %> <!-- existsと同義、SQL1個分削減(?) -->
			<%= render 'index', courses: @courses %>
		<% else %>
			<h3>対応するコースはありませんでした。</h3>
		<% end %>