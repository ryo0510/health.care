<div class="row">
  <div class="col-xs-12 mt-3">
    <h2><i class="fas fa-clipboard-list"></i>コース新規登録</h2>
　</div>
</div>

<div class="row">
  <div class="col-8 offset-2 md-5">
     <%= form_with model: [:admin, @course], local:true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <%= f.label :コース名, class:"form_label font-weight-bold" %>
            <%= f.text_field :name, placeholder: "コース名", class:"form-control md-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :実施項目①, class:"form_label font-weight-bold" %>
            <%= f.text_area :working_item, placeholder: "①--------。", class:"form-control form-control-lg mb-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :実施項目②, class:"form_label font-weight-bold" %>
            <%= f.text_area :working_item_second, placeholder: "②--------。(空欄可)", class:"form-control form-control-lg mb-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :実施項目③, class:"form_label font-weight-bold" %>
            <%= f.text_area :working_item_third, placeholder: "③--------。(空欄可)", class:"form-control form-control-lg mb-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :カテゴリー, class:"form_label font-weight-bold" %>
            <%=  f.collection_select(:category_id, Category.all, :id, :name, {include_blank: "--選択してください--"}, {class: "form-control"}) %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :目標日数, class:"form_label my-3 font-weight-bold" %>
            <%= f.text_field :target_date, size:"5" %>日
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :記録方法, class:"form_label my-3 font-weight-bold" %>
            <%= f.collection_select(:way, Course.ways_i18n, :first, :last, {selected: @course.way}, {class: "form-control"}) %>
          </div>
        </tr>
        <tr>
          <div class="form-action">
            <th><%= f.submit "新規登録", class:"btn btn-outline-success" %></th>
          </div>
        </tr>
      </table>
    <% end %>
  </div>
</div>