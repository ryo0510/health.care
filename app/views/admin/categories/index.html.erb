<div class="row">
　　<div class="col-xs-12 mt-3">
 　　　<h4><i class="fas fa-tag"></i>カテゴリー一覧・追加</h4>
 　　</div>
  </div>

  <div class="row">
    <div class="col-xs-10 mt-1">
      <%= form_with model: @category, url:admin_categories_path, local: true do |f| %>
        <div class="form-group row">
          <div class="col-4"><%= f.label :カテゴリー名 %></div>
          <div class="col-4"><%= f.text_field :name, placeholder: "7文字以下" %></div>
          <div class="col-2 offset-1"><%= f.submit "新規登録", class: "btn btn-outline-success" %></div>
        </div>
      <% end %>
    </div>
   </div>

    <div class="row mt-5">
      <div class="col-xs-12">
        <table class="table table-light">
          <thead class="table-active text-center">
            <tr>
              <th class="text-white bg-dark">カテゴリー</th>
              <th class="text-white bg-dark"></th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
            <tr>
              <td class="text-center"><%= category.name %></td>
              <td class="text-center"><%= link_to "編集する", edit_admin_category_path(category), class: "btn btn-outline-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>