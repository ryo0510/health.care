<div class="row">
  <div class="col-xs-12 mt-3">
  　<h4><%= @customer.full_name %>さんの会員情報編集</h4>
　</div>
</div>

<%= render 'layouts/error_messages', resource: @customer %>

<div class="row ml-4 mt-3">
  <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
    <div class="form-group row">
      <div class="col-4">会員ID</div>
      <div class="col-8"><%= @customer.id %></div>
    </div>

    <div class="form-group row">
      <div class="col-4"><%= f.label :氏名 %></div>
      <div class="col-4"><%= f.text_field :last_name, class: "form-control" %></div>
      <div class="col-4"><%= f.text_field :first_name, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-4"><%= f.label :フリガナ %></div>
      <div class="col-4"><%= f.text_field :last_name_kana, class: "form-control" %></div>
      <div class="col-4"><%= f.text_field :first_name_kana, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-4"><%= f.label :住所 %></div>
      <div class="col-8"><%= f.text_field :address, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-4"><%= f.label :電話番号 %></div>
      <div class="col-8"><%= f.text_field :tel, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-4"><%= f.label :メールアドレス %></div>
      <div class="col-8"><%= f.email_field :email, class: "form-control" %></div>
    </div>

    <div class="form-group row">
      <div class="col-4"><%= f.label :会員ステータス %></div>
      <div class="col-8">
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "有効", value: false %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, "退会", value: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-4"></div>
      <div class="col-8"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>
