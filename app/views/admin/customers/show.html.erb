<div class="row">
　　<div class="col-xs-12 mt-3">
 　　　<h4><%= @customer.full_name %>さんの会員詳細</h4>
 　　</div>
 </div>

  <div class="col-6 ml-4">

    <div class="row mt-3">
      <div class="col-4">会員ID</div>
      <div class="col-8"><%= @customer.id %></div>
    </div>

    <div class="row mt-3">
      <div class="col-4">氏名</div>
      <div class="col-8"><%= @customer.full_name %></div>
    </div>

    <div class="row mt-3">
      <div class="col-4">フリガナ</div>
      <div class="col-8"><%= @customer.full_name_kana %></div>
    </div>

    <div class="row mt-3">
      <div class="col-4">住所</div>
      <div class="col-8"><%= @customer.address %></div>
    </div>

    <div class="row mt-3">
      <div class="col-4">電話番号</div>
      <div class="col-8"><%= @customer.tel %></div>
    </div>

    <div class="row mt-3">
      <div class="col-4">メールアドレス</div>
      <div class="col-8"><%= @customer.email %></div>
    </div>

    <div class="row mt-3">
      <div class="col-4">会員ステータス</div>
      <div class="col-8">
        <% if @customer.is_deleted? %>
          <div class="text-secondary"><strong>退会</strong></div>
        <% else %>
          <div class="text-success"><strong>有効</strong></div>
        <% end %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-4"></div>
      <% if !(@customer.email == "guest@example.com") %>
        <div class="col-3"><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %></div>
      <% end %>
    </div>
  </div>