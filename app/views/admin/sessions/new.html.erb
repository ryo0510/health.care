<div class="row">
    <div class="col">
      <div class="col-6 offset-3">
        <h4><i class="fas fa-sign-in-alt"></i>管理者ログイン</h4>
        　<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field my-2">
            <%= f.label :"メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, placeholder:"例)nagano_cake@example.com", autocomplete: "email", class: "form-control" %>
          </div>
          <div class="field my-2">
            <%= f.label :"パスワード" %><br />
            <%= f.password_field :password, placeholder:"例)xxxxxx", autocomplete: "current-password", class: "form-control" %>
          </div>
          <div class="actions my-3 text-center">
            <%= f.submit "ログイン", class: "btn btn-outline-primary" %>
          </div>
          <% end %>
          <div class="actions my-3 text-center">
            <%= link_to 'ゲストログイン（閲覧用）', admins_guest_sign_in_path, class: "btn btn-secondary mb-3 sign_in", method: :post %>
          </div>
      </div>
    </div>
  </div>