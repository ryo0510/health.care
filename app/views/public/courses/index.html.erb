<% if params[:category_id] %>
			<h2><i class="fas fa-clipboard-list"></i><%= @category.name %>のコース一覧 </h2>
		<% else %>
			<h2><i class="fas fa-clipboard-list"></i>コース一覧 </h2>
		<% end %>

		<% if @courses.first %> <!-- existsと同義、SQL1個分削減(?) -->
			<%= render 'admin/courses/index', courses: @courses %>
		<% else %>
			<h3>対応するコースはありませんでした。</h3>
		<% end %>
