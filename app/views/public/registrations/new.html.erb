<div class="container">
  <div class="row">
    <div class="col-xs-12 mt-3">
      <h4><i class="fas fa-plus-circle"></i> 新規会員登録</h4>
 　　</div>
  </div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <table>
        <tbody>
          <tr>
            <th>名前</th>
            <td class="sign-up-small-cell">(姓)</td>
            <td><%= f.text_field :last_name, autfocus: true %></td>
            <td class="sign-up-small-cell">(名)</td>
            <td><%= f.text_field :first_name, autfocus: true %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td class="sign-up-small-cell">(セイ)</td>
            <td><%= f.text_field :last_name_kana, autfocus: true %></td>
            <td class="sign-up-small-cell">(メイ)</td>
            <td><%= f.text_field :first_name_kana, autfocus: true %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.email_field :email, autfocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.text_field :tel, autfocus: true %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.text_field :address, autfocus: true %></td>
          </tr>
          <tr>
            <th>パスワード(6文字以上)</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.password_field :password %></td>
          </tr>
          <tr>
            <th>パスワード(確認用)</th>
            <td class="sign-up-small-sell"></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "current-password" %></td>
          </tr>
        </tbody>
      </table>
      <br>
      <div class="customer-sign-up-actions">
        <%= f.submit "新規登録", class:"btn btn-success col-xs-3 col-xs-offset-5" %>
      </div>
    <% end %>
  </div>
</div>

<br>
<div class="container col-xs-6 col-xs-offset-2 sign-up-message">
  <p class="font-weight-bold">既に登録済みの方</p>
  <div class="row">
    <p class="col-xs-offset"><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</p>
  </div>
</div>